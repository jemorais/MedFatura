# MedFatura - Supabase Configuration
# Copy this file to .env and fill in your Supabase credentials

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration (for Supabase)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Application Configuration
APP_URL=http://localhost:5173
APP_ENV=development

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (if needed for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@medfatura.com

# Security
BCRYPT_ROUNDS=10
JWT_SECRET=your_jwt_secret_here

# Cloudflare Workers (for production)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token